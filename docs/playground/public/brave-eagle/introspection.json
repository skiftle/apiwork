  "resources": {
    "tasks": {
      "identifier": "tasks",
      "path": "tasks",
      "actions": {
        "index": {
          "method": "get",
          "path": "/",
          "summary": "List all tasks",
          "description": "Returns a paginated list of tasks with optional filtering by status and priority",
          "tags": [
            "Tasks",
            "Core"
          ],
          "operation_id": "listTasks",
          "request": {
            "query": {
              "filter": {
                "type": "union",
                "variants": [
                  {
                    "type": "task_filter"
                  },
                  {
                    "type": "array",
                    "of": "task_filter"
                  }
                ],
                "optional": true
              },
              "include": {
                "type": "task_include",
                "optional": true
              },
              "page": {
                "type": "task_page",
                "optional": true
              },
              "sort": {
                "type": "union",
                "variants": [
                  {
                    "type": "task_sort"
                  },
                  {
                    "type": "array",
                    "of": "task_sort"
                  }
                ],
                "optional": true
              }
            }
          },
          "response": {
            "body": {
              "type": "union",
              "variants": [
                {
                  "type": "task_index_success_response_body"
                },
                {
                  "type": "error_response_body"
                }
              ]
            }
          }
        },
        "show": {
          "method": "get",
          "path": "/:id",
          "summary": "Get task details",
          "description": "Returns a single task by ID",
          "tags": [
            "Tasks"
          ],
          "operation_id": "getTask",
          "request": {
            "query": {
              "include": {
                "type": "task_include",
                "optional": true
